<php

$sql = "Select a.activityName, a.type, e.date, s.city, s.showroomName from event as e , activity as a, showroom as s, user as s, reservation as r where 
e.showroomID=s.ID and e.activityID = a.ID and e.ID=r.eventID and r.userID = u.ID and u.ID = " + $userID;

if (mysqli_query($conn, $sql)) {
    echo "Record updated successfully";
} else {
    echo "Error: " . $sql . "<br>" . mysqli_error($conn);
