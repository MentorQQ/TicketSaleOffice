<php

$sql = "INSERT INTO reservation (ID, userID, eventID, ticketNumber)
VALUES (mysql_insert_id(), $userID', $eventID, $ticketNumber)";

if (mysqli_query($conn, $sql)) {
    echo "New record created successfully";
} else {
    echo "Error: " . $sql . "<br>" . mysqli_error($conn);
}

?>

